<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Settings"
    >

    <EditTextPreference
        android:key="@string/accountAddressKey"
        android:title="Account address"

        android:defaultValue="randomString"/>

    <PreferenceScreen android:title="About" >
        <Preference
            android:title="Powered by Etherscan.io APIs"
            >
            <intent android:action="android.intent.action.VIEW"
            android:data="https://etherscan.io/apis"/>
        </Preference>
        <Preference

            android:title="Also powered by Nanopool.org APIs">
            <intent android:action="android.intent.action.VIEW"
                android:data="https://eth.nanopool.org/api"/>
        </Preference>
    </PreferenceScreen>

</PreferenceScreen>